---
import "@fontsource-variable/inter";
import Footer from "@/components/footer.astro";
import Navbar from "@/components/navbar.astro";
import { checkImageUrl } from "@/utils/all";
import { SEO } from "astro-seo";

export interface Props {
  title?: string;
  desc?: string;
  ogimage?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const { title, desc, ogimage = "/opengraph.jpg" } = Astro.props;

const resolvedOGImage = checkImageUrl(ogimage, Astro.site);

const makeTitle = title
  ? title + " | " + "Trip"
  : "Nuestro viajecito a Londres";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={makeTitle}
      description={desc ||
        "Stablo is a Blog Starter Template built with Astro & MDX."}
      canonical={canonicalURL}
      twitter={{
        creator: "@/surjithctly",
        site: "@/web3templates",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Stablo - Blog Starter Template for Astro`,
          image: resolvedOGImage,
        },
        image: {
          alt: "Stablo Screenshot",
        },
      }}
    />
  </head>
  <body class="bg-purple-200">
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Establecer imagen de fondo */
      body {
        position: relative; /* Para posicionar la pseudo-capa de fondo */
        min-height: 100vh; /* Asegura que cubra toda la altura de la ventana */
        margin: 0; /* Elimina el margen del body */
      }

      body::before {
        content: ""; /* Crea una capa vacía */
        position: absolute; /* Posición absoluta para cubrir todo el body */
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: url("/background.jpg"); /* Ruta correcta a tu imagen */
        background-size: cover; /* Cubre toda la pantalla */
        background-position: center; /* Centra la imagen */
        background-repeat: no-repeat; /* Evita que la imagen se repita */
        opacity: 0.5; /* Ajusta la opacidad aquí (0.0 a 1.0) */
        z-index: -1; /* Envía la capa al fondo */
      }

      .container {
        /* Asegúrate de que tu contenido esté dentro de un contenedor */
        position: relative; /* Posición relativa para que el texto se muestre sobre la capa */
        z-index: 1; /* Asegura que el contenido esté encima de la imagen de fondo */
      }

      /* Mejora la velocidad de la página */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
